<!-- Saldo uÅ¼ytkownika pobrane z portfela (lub 0, jeÅ›li brak portfela) -->
<p><strong>Saldo:</strong> <%= current_user.wallet&.balance || 0 %> Å¼etonÃ³w</p>

<h3>ðŸ“Š Historia salda</h3>

<!-- Kontener dla wykresu Canvas â€“ okreÅ›lamy rozmiary i tÅ‚o -->
<div style="position: relative;
  height: 300px;
  width: 100%;
  max-width: 700px;
  margin: 40px auto 60px;
  background: #1c1c1c;">
  <canvas id="balanceChart" width="700" height="300"></canvas>
</div>

<script>
    document.addEventListener("turbo:load", function() {
        const ctx = document.getElementById('balanceChart');
        if (!ctx) return; // JeÅ›li element nie istnieje, przerywamy

        // 1. JeÅ›li istnieje poprzednia instancja wykresu, jÄ… niszczymy
        if (window.balanceChartInstance) {
            window.balanceChartInstance.destroy();
        }

        // 2. Przygotowanie danych
        // - labels: tablica znacznikÃ³w czasowych w formacie "DD MMM HH:MM"
        const labels = <%= raw @balance_history.map { |h| h.created_at.strftime('%d %b %H:%M') }.to_json %>;
        // - dataPoints: akumulowana historia salda (startujÄ…c od pierwszej wartoÅ›ci)
        const dataPoints = <%= raw @balance_history.inject([1000]) { |arr, h| arr << arr.last + h.amount }.drop(1).to_json %>;

        // 3. Inicjalizacja nowego wykresu liniowego
        window.balanceChartInstance = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: "Saldo w czasie",
                    data: dataPoints,
                    borderColor: "gold",
                    backgroundColor: "rgba(255, 215, 0, 0.1)",
                    fill: true,
                    tension: 0.3,               // zaokrÄ…glenie linii
                    pointHoverRadius: 6,        // wiÄ™ksze kÃ³Å‚ko przy najechaniu
                    pointHitRadius: 10          // wiÄ™kszy obszar wykrywania klikniÄ™Ä‡
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,

                // 4. Animacje i interakcje
                animations: {
                    tension: {
                        duration: 1000,
                        easing: 'linear'
                    },
                    hover: {
                        duration: 0 // wyÅ‚Ä…czenie animacji hover
                    }
                },
                interaction: {
                    mode: 'index',
                    intersect: false
                },

                // 5. Ustawienia tooltipÃ³w i legendy
                plugins: {
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleColor: '#ffd700',
                        bodyColor: 'white',
                        displayColors: false,
                        padding: 12,
                        callbacks: {
                            label: function(context) {
                                return `Saldo: ${context.parsed.y} Å¼etonÃ³w`;
                            }
                        }
                    },
                    legend: {
                        labels: {
                            color: 'gold',
                            font: { size: 14 }
                        }
                    }
                },

                // 6. Konfiguracja osi
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: 'white',
                            callback: function(value) { return value + ' Å¼'; }
                        },
                        grid: { color: '#444' }
                    },
                    x: {
                        ticks: { color: 'white' },
                        grid: { color: '#444' }
                    }
                }
            }
        });
    });
</script>
